<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purpal"
    android:orientation="vertical"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="222dp"
            app:cardCornerRadius="25dp"
            android:backgroundTint="@color/purpal">

            <ImageView
                android:layout_width="152dp"
                android:layout_height="173dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="250dp"
                android:background="@drawable/custome_edittext"
                android:src="@drawable/catimg"/>


            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="70dp"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="20dp"
                android:text="Class"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtrollno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:text="RollNo"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="546dp"
        android:background="@drawable/custome_edittext"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="multiply"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <ImageButton
            android:id="@+id/btnTest"
            android:layout_width="87dp"
            android:layout_height="84dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_content_paste_24"
            android:background="@drawable/custome_edittext"/>

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="84dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custome_edittext"
            android:src="@drawable/baseline_assignment_returned_24" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="84dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custome_edittext"
            android:src="@drawable/baseline_calendar_month_24" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="84dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/baseline_currency_rupee_24"
            android:background="@drawable/custome_edittext" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="84dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/baseline_list_alt_24"
            android:background="@drawable/custome_edittext" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="84dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/baseline_local_post_office_24"
            android:background="@drawable/custome_edittext" />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="84dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="290dp"
            android:src="@drawable/baseline_menu_book_24"
            android:background="@drawable/custome_edittext" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="89dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="285dp"
            android:src="@drawable/baseline_perm_media_24"
            android:background="@drawable/custome_edittext" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="84dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="290dp"
            android:src="@drawable/baseline_person_24"
            android:background="@drawable/custome_edittext" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="170dp"
            android:layout_height="46dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="430dp"
            android:background="@drawable/custome_edittext"
            android:text="Logout"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />


    </androidx.cardview.widget.CardView>

</LinearLayout>